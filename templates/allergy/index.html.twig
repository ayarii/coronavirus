{% extends 'base.html.twig' %}

{% block title %}Allergy index{% endblock %}
{% block body %}
    <div class="card">
        <div class="header">
            <h4 class="title">Allergy index</h4>
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for allergy in allergies %}
                    <tr>
                        <td>{{ allergy.id }}</td>
                        <td>{{ allergy.name }}</td>
                        <td>
                            <a href="{{ path('allergy_show', {'id': allergy.id}) }}"
                               class="btn btn-outline-dark dataTableLink btn-sm">show</a>
                            <a href="{{ path('allergy_edit', {'id': allergy.id}) }}"
                               class="btn btn-outline-dark dataTableLink btn-sm">edit</a>
                            <a href="{{ path('allergy_delete', {'id': allergy.id}) }}"
                               class="btn btn-outline-dark dataTableLink btn-sm">delete</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="footer container-fluid">
                <a href="{{ path('allergy_new') }}" class="btn btn-outline-dark dataTableLink btn-sm">Create new
                    sickness</a>
            </div>
        </div>
    </div>
{% endblock %}
