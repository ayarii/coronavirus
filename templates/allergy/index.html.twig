{% extends 'base.html.twig' %}

{% block title %}Allergy index{% endblock %}

{% block body %}
    <h1>Allergy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for allergy in allergies %}
            <tr>
                <td>{{ allergy.id }}</td>
                <td>{{ allergy.name }}</td>
                <td>
                    <a href="{{ path('allergy_show', {'id': allergy.id}) }}">show</a>
                    <a href="{{ path('allergy_edit', {'id': allergy.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('allergy_new') }}">Create new</a>
{% endblock %}
