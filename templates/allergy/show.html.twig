{% extends 'base.html.twig' %}

{% block title %}Allergy{% endblock %}

{% block body %}
    <div class="card">
        <div class="header">
            <h4 class="title">Allergy</h4>
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ allergy.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ allergy.name }}</td>
                </tr>
                </tbody>
            </table>
            <div class=" footer container-fluid">
                <a href="{{ path('allergy_index') }}" class="btn btn-outline-dark dataTableLink btn-sm">Back to list</a>
                <a href="{{ path('allergy_edit', {'id': allergy.id}) }}"
                   class="btn btn-outline-dark dataTableLink btn-sm">Edit</a>
                {{ include('allergy/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
