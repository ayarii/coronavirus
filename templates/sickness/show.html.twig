{% extends 'base.html.twig' %}

{% block title %}Sickness{% endblock %}

{% block body %}

    <div class="card">
        <div class="header">
            <h4 class="title">Sickness</h4>
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ sickness.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ sickness.name }}</td>
                </tr>

                </tbody>
            </table>

            <div class=" footer container-fluid">
                <a href="{{ path('sickness_index')}}" class="btn btn-outline-dark dataTableLink btn-sm">Back to list</a>

                <a href="{{ path('sickness_edit', {'id': sickness.id}) }}" class="btn btn-outline-dark dataTableLink btn-sm">Edit</a>

                {{ include('sickness/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
