{% extends 'base.html.twig' %}

{% block title %}Volunteer{% endblock %}

{% block body %}
    <div class="card">
        <div class="header">
            <h4 class="title">Volunteer</h4>
            <table class="table">
                <tbody>
                <tr>
                <img class="image" src="{{ asset('uploads/pictures/' ~ Volunteer.picture) }}"></tr>
                <tr>
                    <th>First Name</th>
                    <td>{{ Volunteer.firstName }}</td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <td>{{ Volunteer.lastName }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ Volunteer.country }}</td>
                </tr>

                <tr>
                    <th>Specialty</th>
                    <td>{{ Volunteer.specialty }}</td>
                </tr>
                </tbody>
            </table>

            <div class=" footer container-fluid">
                <a href="{{ path('Volunteer_index')}}" class="btn btn-outline-dark dataTableLink btn-sm">Back to list</a>

                <a href="{{ path('Volunteer_edit', {'id': Volunteer.id}) }}" class="btn btn-outline-dark dataTableLink btn-sm">Edit</a>

                {{ include('Volunteer/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
