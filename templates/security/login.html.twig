<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/png" href="{{ asset('assets/Back/img/favicon.png') }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>Login</title>
    <!-- CSS Files -->
    <link href="{{ asset('assets/Back/css/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/Front/css/style.css') }}" rel="stylesheet"/>
    <link href="{{ asset('assets/Front/css/login.css') }}" rel="stylesheet"/>

</head>
<body class="body">
<h1 class="text-center mt-5">Dashboard Admin</h1>
<div class="container pt-3 body-login" >
    <div class="row justify-content-sm-center">
        <div class="col-sm-10 col-md-6">
            <div class="card border-info">
                <div class="card-body"  data-image="{{ asset('assets/Front/images/resource/news-10.jpg') }}" data-color="purple">
                    <div class="row">
                        <div class="col-md-4 text-center"><img class="img-login"
                         src="{{ asset('assets/Front/images/resource/news-14.jpg') }}">
                        </div>
                        <div class="col-md-8">
                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="well">
                                    <form action="{{ path('security_login') }}" method="post">
                                        <fieldset>
                                            <div class="form-group">
                                                <label for="username">Username</label>
                                                <input type="text" id="username" name="_username"
                                                       value="{{ last_username }}" class="form-control"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="password">Password</label>
                                                <input type="password" id="password" name="_password"
                                                       class="form-control"/>
                                            </div>
                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"/>
                                            <button type="submit" class="btn btn-outline-dark dataTableLink btn-lg">
                                                Login
                                            </button>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>

</html>

