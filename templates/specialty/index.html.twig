{% extends 'base.html.twig' %}

{% block title %}Specialty index{% endblock %}

{% block body %}
    <h1>Specialty index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialty in specialties %}
            <tr>
                <td>{{ specialty.id }}</td>
                <td>{{ specialty.name }}</td>
                <td>{{ specialty.description }}</td>
                <td>
                    <a href="{{ path('specialty_show', {'id': specialty.id}) }}">show</a>
                    <a href="{{ path('specialty_edit', {'id': specialty.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('specialty_new') }}">Create new</a>
{% endblock %}
