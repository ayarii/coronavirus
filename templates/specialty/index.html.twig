{% extends 'base.html.twig' %}

{% block title %}Specialty index{% endblock %}

{% block body %}
    <div class="card">

        <div class="header">
            <h4 class="title">Specialty index</h4>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for specialty in specialties %}
                    <tr>
                        <td>{{ specialty.id }}</td>
                        <td>{{ specialty.name }}</td>
                        <td>{{ specialty.description }}</td>
                        <td>
                            <a href="{{ path('specialty_show', {'id': specialty.id}) }}"
                               class="btn btn-outline-dark dataTableLink btn-sm">show</a>
                            <a href="{{ path('specialty_edit', {'id': specialty.id}) }}"
                               class="btn btn-outline-dark dataTableLink btn-sm">edit</a>
                            <a href="{{ path('specialty_delete', {'id': specialty.id}) }}"
                               class="btn btn-outline-dark dataTableLink btn-sm">delete</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="footer container-fluid">
                <a href="{{ path('specialty_new') }}" class="btn btn-outline-dark dataTableLink btn-sm">Create new
                    specialty</a>
            </div>
        </div>
    </div>
{% endblock %}
